{
    "name": "smallblind-backend",
    "version": "1.0.0",
    "description": "Backend system for SmallBlind AI services",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "lint": "eslint 'src/**/*.{js,ts}'",
        "format": "prettier --write 'src/**/*.{js,ts}'",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prisma:push": "prisma db push",
        "prisma:generate": "prisma generate",
        "prisma:seed": "ts-node prisma/seed.ts",
        "prisma:studio": "prisma studio",
        "prisma:test": "ts-node src/scripts/test-prisma.ts"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "keywords": [
        "ai",
        "machine-learning",
        "backend",
        "typescript"
    ],
    "author": "SmallBlind Team",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "express-validator": "^7.0.1",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.0",
        "mongodb": "^5.5.0",
        "multer": "^1.4.5-lts.1",
        "uuid": "^9.0.0",
        "winston": "^3.8.2",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "@prisma/client": "^6.7.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.1",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.2.3",
        "@types/uuid": "^9.0.1",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "prisma": "^6.7.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.4"
    }
}